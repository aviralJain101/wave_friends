    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "lodash": "^4.17.21",
    "mongoose": "^6.10.0",
    "morgan": "^1.10.0",
    "typedi": "^0.10.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  },
